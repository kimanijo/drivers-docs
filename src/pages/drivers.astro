---
import { getCollection } from 'astro:content';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';

const allDrivers = await getCollection('docs');

const uniqueCategories = [...new Set(allDrivers.map(driver => driver.data.category || 'Uncategorized'))];

---

<StarlightPage frontmatter={{
  title: 'Driver Categories',
  template: 'splash'
}}>
  <div class="category-grid">
    {uniqueCategories.map(category => (
      <a href={`/drivers/${category.toLowerCase()}`} class="category-box">
        <img src={`/images/categories/${category.toLowerCase()}.webp`} alt={`${category} category thumbnail`} class="category-thumbnail" />
        <h2>{category}</h2>
      </a>
    ))}
  </div>
</StarlightPage>

<style>
  .category-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .category-box {
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.75rem;
    padding: 0.5rem;
    background-color: var(--sl-color-gray-6);
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    text-decoration: none;
    color: inherit;
    box-shadow: var(--sl-shadow-sm);
    transition: all 0.2s ease-in-out;
  }

  .category-box:hover {
    background-color: var(--sl-color-gray-5);
    transform: translateY(-5px);
    box-shadow: var(--sl-shadow-md);
  }

  .category-thumbnail {
    width: 100px;
    height: 100px;
    object-fit: contain;
    margin-bottom: 0.5rem;
  }

  .category-box h2 {
    margin-top: 0.5rem;
    margin-bottom: 0.75rem;
    color: var(--sl-color-white);
    font-size: 1.5rem;
  }

  .category-box p {
    font-size: 1rem;
    color: var(--sl-color-gray-2);
    margin-bottom: 0.5rem;
    line-height: 1.5;
  }
</style>
